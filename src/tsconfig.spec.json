{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es6",
            "dom"
        ],
        "paths": {
          "*": ["types/*"],
            "Models/*": ["src/app/models/*"],
            "Services/*": ["src/app/services/*"]
        },
        "baseUrl": "../",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ]
}