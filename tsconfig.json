{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es6",
            "dom"
        ],
        "paths": {
            "Models*": ["src/app/models/*"]
        },
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ]
}